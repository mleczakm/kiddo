{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.title'|trans }} — {{ lesson.metadata.title }}{% endblock %}

{% block head_styles %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lora:wght@700&display=swap');
        body { background-color: hsl(var(--background)); }
        .admin-panel-title { font-family: 'Lora', serif; }
    </style>
{% endblock %}

{% block body %}
    <div class="min-h-screen flex w-full bg-background">
        {% include 'components/AdminMenu.html.twig' with { activeTab: activeTab|default('lessons') } %}

        <main class="flex-1">
            <div class="container mx-auto py-8 px-4 sm:px-6 lg:px-8">

                {# Breadcrumbs #}
                <nav aria-label="breadcrumb" class="mb-6">
                    <ol class="flex flex-wrap items-center gap-1.5 break-words text-sm text-muted-foreground sm:gap-2.5">
                        <li class="inline-flex items-center gap-1.5">
                            <a href="{{ path('app_admin_dashboard') }}" class="cursor-pointer hover:text-primary transition-colors">{{ 'admin.title'|trans }}</a>
                            <span class="[&>svg]:size-3.5" aria-hidden="true">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right h-4 w-4"><path d="m9 18 6-6-6-6"></path></svg>
                            </span>
                        </li>
                        <li class="inline-flex items-center gap-1.5">
                            <a href="{{ path('app_admin_lessons') }}" class="cursor-pointer hover:text-primary transition-colors">{{ 'admin.tabs.lessons'|trans }}</a>
                            <span class="[&>svg]:size-3.5" aria-hidden="true">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right h-4 w-4"><path d="m9 18 6-6-6-6"></path></svg>
                            </span>
                        </li>
                        {% if lesson.series %}
                            <li class="inline-flex items-center gap-1.5">
                                <span class="font-medium text-foreground">{{ lesson.metadata.title }}</span>
                                <span class="[&>svg]:size-3.5" aria-hidden="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right h-4 w-4"><path d="m9 18 6-6-6-6"></path></svg>
                                </span>
                            </li>
                        {% endif %}
                        <li class="inline-flex items-center gap-1.5">
                            <span class="font-medium text-foreground">{{ lesson.metadata.schedule|date('Y-m-d H:i') }}</span>
                        </li>
                    </ol>
                </nav>

                {# Header #}
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
                    <div>
                        <h1 class="text-3xl font-bold font-display text-workshop-brown flex items-center gap-3">
                            {{ lesson.metadata.title }}
                            <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors {{ lesson.status == 'active' ? 'border-transparent bg-green-500 text-white' : 'border-transparent bg-red-500 text-white' }}">
                                {{ lesson.status == 'active' ? ('admin.lessons.status.active'|trans) : ('admin.lessons.status.cancelled'|trans) }}
                            </span>
                        </h1>
                        <p class="text-muted-foreground mt-1">
                            {{ lesson.metadata.schedule|format_datetime('medium', 'short') }} · {{ 'lesson.minutes'|trans({'minutes': lesson.metadata.duration}) }} · {{ lesson.bookings|length }}/{{ lesson.metadata.capacity }}
                        </p>
                    </div>
                    <div class="flex items-center gap-2">
                        <form method="post" action="{{ path('app_admin_lesson_toggle', { id: lesson.id }) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle_lesson_' ~ lesson.id) }}">
                            <button type="submit" class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium border h-9 rounded-md px-3 {{ lesson.status == 'active' ? 'border-red-600 text-red-600 hover:bg-red-600/10' : 'border-green-600 text-green-600 hover:bg-green-600/10' }}">
                                {{ lesson.status == 'active' ? ('admin.lessons.actions.deactivate'|trans) : ('admin.lessons.actions.activate'|trans) }}
                            </button>
                        </form>
                        <a href="#" class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium border h-9 rounded-md px-3 border-blue-600 text-blue-600 hover:bg-blue-600/10" aria-disabled="true">
                            {{ 'Reschedule'|trans }}
                        </a>
                        <a href="#" class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium border h-9 rounded-md px-3 border-gray-600 text-gray-700 hover:bg-gray-600/10" aria-disabled="true">
                            {{ 'Modify'|trans }}
                        </a>
                        {% set emails = lesson.attendants|map(u => u.email)|join(',') %}
                        <a href="mailto:?bcc={{ emails|url_encode }}" class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium border h-9 rounded-md px-3 border-amber-600 text-amber-700 hover:bg-amber-600/10">
                            {{ 'Contact attendees'|trans }}
                        </a>
                    </div>
                </div>

                {# Prev/Next navigation in series #}
                {% if prevLesson or nextLesson %}
                    <div class="flex items-center justify-between mb-6">
                        <div>
                            {% if prevLesson %}
                                <a class="text-sm text-primary hover:underline" href="{{ path('app_admin_lesson_view', { id: prevLesson.id }) }}">← {{ 'Previous lesson'|trans }} ({{ prevLesson.metadata.schedule|date('Y-m-d H:i') }})</a>
                            {% endif %}
                        </div>
                        <div>
                            {% if nextLesson %}
                                <a class="text-sm text-primary hover:underline" href="{{ path('app_admin_lesson_view', { id: nextLesson.id }) }}">{{ 'Next lesson'|trans }} ({{ nextLesson.metadata.schedule|date('Y-m-d H:i') }}) →</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <section class="lg:col-span-2 rounded-xl border bg-stone-50 shadow">
                        <div class="p-6 border-b">
                            <h2 class="text-xl font-semibold">{{ 'Bookings'|trans }}</h2>
                        </div>
                        <div class="p-6">
                            <div class="relative w-full overflow-auto">
                                <table class="w-full caption-bottom text-sm">
                                    <thead class="[&_tr]:border-b">
                                    <tr class="border-b">
                                        <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground">{{ 'User'|trans }}</th>
                                        <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground">{{ 'Status'|trans }}</th>
                                        <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground">{{ 'Attendance'|trans }}</th>
                                        <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground">{{ 'Notes'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody class="[&_tr:last-child]:border-0">
                                    {% for booking in lesson.bookings %}
                                        <tr class="border-b">
                                            <td class="p-4 align-middle">
                                                {{ booking.user.name }}
                                                <div class="text-xs text-muted-foreground">{{ booking.user.email }}</div>
                                            </td>
                                            <td class="p-4 align-middle">
                                                {% set status = booking.status %}
                                                <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors
                                                    {{ status == 'confirmed' ? 'border-transparent bg-green-500 text-white' : (status == 'cancelled' ? 'border-transparent bg-red-500 text-white' : 'bg-gray-200 text-gray-800') }}">
                                                    {{ status|trans }}
                                                </span>
                                                {% if booking.isLessonRescheduled(lesson) %}
                                                    <span class="ml-2 text-xs text-amber-700 bg-amber-100 px-2 py-0.5 rounded">{{ 'Rescheduled'|trans }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="p-4 align-middle">
                                                <span class="text-xs text-muted-foreground">{{ '—' }}</span>
                                            </td>
                                            <td class="p-4 align-middle">
                                                <span class="text-xs text-muted-foreground">{{ booking.notes ?? '—' }}</span>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="p-4 text-center text-muted-foreground">{{ 'No bookings yet'|trans }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>

                    <aside class="rounded-xl border bg-stone-50 shadow">
                        <div class="p-6 border-b">
                            <h2 class="text-xl font-semibold">{{ 'Summary'|trans }}</h2>
                        </div>
                        <div class="p-6 space-y-3">
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-muted-foreground">{{ 'Capacity'|trans }}</span>
                                <span class="text-sm font-medium">{{ lesson.metadata.capacity }}</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-muted-foreground">{{ 'Booked'|trans }}</span>
                                <span class="text-sm font-medium">{{ lesson.bookings|length }}</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-muted-foreground">{{ 'Available'|trans }}</span>
                                <span class="text-sm font-medium">{{ lesson.getAvailableSpots() }}</span>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </main>
    </div>
{% endblock %}

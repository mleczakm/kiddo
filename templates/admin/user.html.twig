{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.title'|trans }} — {{ user.name }}{% endblock %}

{% block head_styles %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lora:wght@700&display=swap');

        body {
            background-color: hsl(var(--background));
        }

        .admin-panel-title {
            font-family: 'Lora', serif;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-background">
        <div class="w-full px-6 py-8">
            <div class="space-y-6">
                <nav aria-label="breadcrumb" class="mb-6">
                    <ol class="flex flex-wrap items-center gap-1.5 break-words text-sm text-muted-foreground sm:gap-2.5">
                        <li class="inline-flex items-center gap-1.5">
                            <a href="{{ path('app_admin_dashboard') }}"
                               class="cursor-pointer hover:text-primary transition-colors">Admin Dashboard</a>
                            <span class="[&>svg]:size-3.5" aria-hidden="true">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round" class="lucide lucide-chevron-right h-4 w-4"><path
                                        d="m9 18 6-6-6-6"></path></svg>
                        </span>
                        </li>
                        <li class="inline-flex items-center gap-1.5">
                            <span class="font-medium text-foreground">{{ user.name }}</span>
                        </li>
                    </ol>
                </nav>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
                        <div class="p-6 flex flex-row items-center justify-between space-y-0 pb-2">
                            <h3 class="tracking-tight text-sm font-medium">Total Spent</h3>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round"
                                 class="lucide lucide-credit-card h-4 w-4 text-muted-foreground">
                                <rect width="20" height="14" x="2" y="5" rx="2"></rect>
                                <line x1="2" x2="22" y1="10" y2="10"></line>
                            </svg>
                        </div>
                        <div class="p-6 pt-0">
                            <div class="text-2xl font-bold">—</div>
                            <p class="text-xs text-muted-foreground">Across bookings</p>
                        </div>
                    </div>

                    <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
                        <div class="p-6 flex flex-row items-center justify-between space-y-0 pb-2">
                            <h3 class="tracking-tight text-sm font-medium">Membership</h3>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round" class="lucide lucide-activity h-4 w-4 text-muted-foreground">
                                <path d="M22 12h-2.48a2 2 0 0 0-1.93 1.46l-2.35 8.36a.25.25 0 0 1-.48 0L9.24 2.18a.25.25 0 0 0-.48 0l-2.35 8.36A2 2 0 0 1 4.49 12H2"></path>
                            </svg>
                        </div>
                        <div class="p-6 pt-0">
                            <div class="text-2xl font-bold">—</div>
                            <p class="text-xs text-muted-foreground">—</p>
                        </div>
                    </div>

                    <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
                        <div class="p-6 flex flex-row items-center justify-between space-y-0 pb-2">
                            <h3 class="tracking-tight text-sm font-medium">Status</h3>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                 stroke-linejoin="round" class="lucide lucide-activity h-4 w-4 text-green-500">
                                <path d="M22 12h-2.48a2 2 0 0 0-1.93 1.46l-2.35 8.36a.25.25 0 0 1-.48 0L9.24 2.18a.25.25 0 0 0-.48 0l-2.35 8.36A2 2 0 0 1 4.49 12H2"></path>
                            </svg>
                        </div>
                        <div class="p-6 pt-0">
                            <div class="text-2xl font-bold">
                                <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold border-transparent bg-primary text-primary-foreground">active</span>
                            </div>
                            <p class="text-xs text-muted-foreground">Current account status</p>
                        </div>
                    </div>
                </div>

                <div class="space-y-4">
                    <div class="inline-flex h-10 items-center justify-center rounded-md bg-muted p-1 text-muted-foreground"
                         tabindex="0">
                        <button type="button"
                                class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium data-[state=active]:bg-background data-[state=active]:text-foreground data-[state=active]:shadow-sm">
                            Profile
                        </button>
                        <button type="button"
                                class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium">
                            Bookings
                        </button>
                        <button type="button"
                                class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium">
                            Payments
                        </button>
                        <button type="button"
                                class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium">
                            Activity
                        </button>
                    </div>

                    <div class="mt-2 space-y-4">
                        <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
                            <div class="flex flex-col space-y-1.5 p-6">
                                <h3 class="text-2xl font-semibold leading-none tracking-tight">Personal Information</h3>
                            </div>
                            <div class="p-6 pt-0 space-y-4">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="text-sm font-medium">Full Name</label>
                                        <p class="text-sm text-muted-foreground">{{ user.name }}</p>
                                    </div>
                                    <div>
                                        <label class="text-sm font-medium">Email</label>
                                        <p class="text-sm text-muted-foreground">{{ user.email }}</p>
                                    </div>
                                    <div>
                                        <label class="text-sm font-medium">Phone</label>
                                        <p class="text-sm text-muted-foreground">{{ user.getPhone() ? '-' : '-' }}</p>
                                    </div>
                                    <div>
                                        <label class="text-sm font-medium">Registered</label>
                                        <p class="text-sm text-muted-foreground">{{ user.getCreatedAt() ? user.getCreatedAt()|date('Y-m-d H:i') ~ ' UTC' : '-' }}</p>
                                    </div>
                                    <div>
                                        <label class="text-sm font-medium">Roles</label>
                                        <p class="text-sm text-muted-foreground">{{ user.roles|join(', ') }}</p>
                                    </div>
                                    <div>
                                        <label class="text-sm font-medium">Notes</label>
                                        <p class="text-sm text-muted-foreground bg-muted p-3 rounded-md">—</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

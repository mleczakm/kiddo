{% extends 'base.html.twig' %}

{% block title %}{{ 'form.register.title'|trans }}{% endblock %}

{% block body %}
    <main class="flex-grow py-12">
        <div class="page-container">
            <div class="max-w-md mx-auto">
                <h1 class="section-title text-center">{{ 'form.register.title'|trans }}</h1>

                {{ component('RegisterUser') }}
                
                {% if not app.user %}
                    <div class="text-center mt-6">
                        <p class="text-muted-foreground">
                            {{ 'form.register.already_have_account'|trans }}
                            <a class="text-workshop-red hover:underline" href="{{ path('app_login') }}">{{ 'form.register.login'|trans }}</a>
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
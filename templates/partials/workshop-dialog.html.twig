<div
        data-action="click->modal#clickOutside"
        data-state="closed"
        class="data-[state=open]:fixed inset-0 z-50 bg-black/80 data-[state=open]:animate-in data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0 mt-0" style="pointer-events: auto;" data-aria-hidden="true" aria-hidden="true"></div>
<dialog data-modal-target="dialog"
        data-action="close->modal#close"
        class="open:flex open:fixed left-[70%] top-[80%] z-50 w-full translate-x-[-50%] translate-y-[-50%] gap-4 border bg-background p-6 shadow-lg duration-200 [open]:slide-in-from-left-1/2 [open]:slide-in-from-top-[48%] sm:rounded-lg max-w-3xl max-h-[90vh] overflow-y-auto backdrop:bg-slate-600 backdrop:opacity-80 backdrop:backdrop-blur-sm">
    <div class="grid">
    <div class="flex flex-col space-y-1.5 text-center sm:text-left">
        <h2 id="radix-:r1:" class="tracking-tight text-2xl font-bold font-display text-workshop-brown">
            {{ lesson.metadata.title }}</h2>
        <p id="radix-:r2:" class="text-sm text-muted-foreground">{{ lesson.metadata.lead }}</p>
    </div>
    <div class="space-y-6">
        <div class="w-full h-48 md:h-60 rounded-lg bg-cover bg-center"
             style="background-color: {{ lesson.metadata.visualTheme }}; background-image: none;"></div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="lucide lucide-calendar-check w-5 h-5 mr-3 text-workshop-red">
                    <path d="M8 2v4"></path>
                    <path d="M16 2v4"></path>
                    <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                    <path d="M3 10h18"></path>
                    <path d="m9 16 2 2 4-4"></path>
                </svg>
                <div>
                    <p class="font-medium">{{ 'lesson.schedule'|trans }}</p>
                    <p class="text-muted-foreground">{% if lesson.type.value == 'weekly' %}
                            {{ 'lesson.every'|trans({
                                'day': lesson.metadata.schedule|date('l'),
                                'hour': lesson.metadata.schedule|date('H:i')
                            }) }}
                        {% else %}
                            {{ 'lesson.once'|trans({
                                'day': lesson.metadata.schedule|date('l'),
                                'date': lesson.metadata.schedule|date('d.m.Y')|format_datetime(pattern: 'd MMMM'),
                                'hour': lesson.metadata.schedule|date('H:i')
                            }) }}
                        {% endif %}</p>
                </div>
            </div>
            <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="lucide lucide-clock w-5 h-5 mr-3 text-workshop-blue">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <div>
                    <p class="font-medium">{{ 'lesson.duration'|trans }}</p>
                    <p class="text-muted-foreground">{{ 'lesson.minutes'|trans({minutes: lesson.metadata.duration}) }}</p>
                </div>
            </div>
            <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="lucide lucide-users w-5 h-5 mr-3 text-workshop-green">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                <div>
                    <p class="font-medium">{{ 'lesson.age_range_label'|trans }}</p>
                    <p class="text-muted-foreground">{{ lesson.metadata.ageRange.max ? 'lesson.age_range'|trans({min: lesson.metadata.ageRange.min, max: lesson.metadata.ageRange.max, top: lesson.metadata.ageRange.max}) : 'lesson.age_above'|trans({min: lesson.metadata.ageRange.min}) }}</p>
                </div>
            </div>
            <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="lucide lucide-map-pin w-5 h-5 mr-3 text-workshop-yellow">
                    <path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <div>
                    <p class="font-medium">{{ 'lesson.location'|trans }}</p>
                    <p class="text-muted-foreground">{{ 'page.default.address.street'|trans }}, {{ 'page.default.address.city'|trans }}</p>
                </div>
            </div>
            <div class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="lucide lucide-tag w-5 h-5 mr-3 text-workshop-pink">
                    <path d="M12.586 2.586A2 2 0 0 0 11.172 2H4a2 2 0 0 0-2 2v7.172a2 2 0 0 0 .586 1.414l8.704 8.704a2.426 2.426 0 0 0 3.42 0l6.58-6.58a2.426 2.426 0 0 0 0-3.42z"></path>
                    <circle cx="7.5" cy="7.5" r=".5" fill="currentColor"></circle>
                </svg>
                <div>
                    <p class="font-medium">{{ 'lesson.category'|trans }}</p>
                    <p class="text-muted-foreground">{{ lesson.metadata.category }}</p>
                </div>
            </div>
            <div class="flex items-center">
                <div class="inline-flex items-center rounded-full border font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-workshop-green text-workshop-green text-base py-1 px-3">
                    {{ 'lesson.spots_available'|trans({spots: lesson.metadata.capacity}) }}
                </div>
            </div>
        </div>
        <div>
            <h3 class="font-semibold mb-2">{{ 'lesson.description'|trans }}</h3>
            <p class="text-muted-foreground">{{ lesson.metadata.description }}</p>
        </div>
        <div class="bg-muted/50 p-4 rounded-lg">
            <h3 class="text-lg font-bold mb-4 font-display text-workshop-brown">
                Booking Options</h3>
            <div dir="ltr">
                <div role="tablist" aria-orientation="horizontal"
                     class="inline-flex h-10 items-center justify-center rounded-md bg-muted p-1 text-muted-foreground w-full mb-4"
                     tabindex="0" style="outline: none;">
                    <button type="button" role="tab" aria-selected="true" aria-controls="radix-:r3:-content-oneTime"
                            id="radix-:r3:-trigger-oneTime"
                            class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 data-[state=active]:bg-background data-[state=active]:text-foreground data-[state=active]:shadow-sm flex-1"
                            tabindex="-1">One-Time Entry
                    </button>
                    <button type="button" role="tab" aria-selected="false" aria-controls="radix-:r3:-content-carnet"
                            id="radix-:r3:-trigger-carnet"
                            class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 data-[state=active]:bg-background data-[state=active]:text-foreground data-[state=active]:shadow-sm flex-1"
                            tabindex="-1">Monthly Carnet
                    </button>
                </div>
                <div data-state="active" data-orientation="horizontal" role="tabpanel"
                     aria-labelledby="radix-:r3:-trigger-oneTime" id="radix-:r3:-content-oneTime" tabindex="0"
                     class="mt-2 ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
                     style="animation-duration: 0s;">
                    <div class="p-4 bg-background rounded-lg mb-4">
                        <div class="flex justify-between items-center mb-2"><h4
                                    class="font-medium">Single Entry</h4><span
                                    class="text-lg font-bold">$25</span></div>
                        <p class="text-sm text-muted-foreground mb-4">Book a single session of this workshop.</p></div>
                </div>
                <div data-state="inactive" data-orientation="horizontal" role="tabpanel"
                     aria-labelledby="radix-:r3:-trigger-carnet" hidden="" id="radix-:r3:-content-carnet" tabindex="0"
                     class="mt-2 ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"></div>
            </div>
        </div>
    </div>
    <div class="sm:justify-end sm:space-x-2 flex flex-col sm:flex-row gap-2 sm:gap-0">
        <form method="dialog">
            <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg]:size-4 [&amp;_svg]:shrink-0 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2">Cancel
            </button>
        </form>
        <div class="flex flex-col sm:flex-row gap-2">
            <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg]:size-4 [&amp;_svg]:shrink-0 border hover:text-accent-foreground h-10 px-4 py-2 bg-workshop-yellow/10 border-workshop-yellow text-workshop-brown hover:bg-workshop-yellow/20">
                Quick Book
            </button>
            <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg]:size-4 [&amp;_svg]:shrink-0 h-10 px-4 py-2 bg-workshop-red text-white hover:bg-workshop-red/90">
                Book &amp; Pay
            </button>
        </div>
    </div>

    <form method="dialog">
        <button class="absolute right-4 top-4 rounded-sm opacity-70 ring-offset-background transition-opacity hover:opacity-100 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:pointer-events-none data-[state=open]:bg-accent data-[state=open]:text-muted-foreground">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                 class="lucide lucide-x h-4 w-4">
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
            </svg>
            <span class="sr-only">Close</span>
        </button>
    </form>
    </div>
</dialog>
<div {{ attributes }}>
    {% set carnets = this.getCarnets() %}
    {% if carnets is not empty %}
        <section>
            <h2 class="text-2xl font-bold mb-4 font-display text-workshop-brown">{{ 'page.my_carnets'|trans }}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {% for booking in carnets %}
                    <div class="rounded-lg border bg-card text-card-foreground shadow-sm border-l-4 border-l-workshop-green">
                        <div class="p-6">
                            <div class="flex justify-between items-start mb-3">
                                <h3 class="font-bold text-lg">{{ booking.title }}</h3>
                                <div class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 text-foreground {{ booking.status == 'active' ? 'bg-green-50' : 'bg-blue-50' }} border-green-200">
                                    {{ ('dashboard.status.' ~ booking.status)|trans }}
                                </div>
                            </div>
                            <div class="space-y-2 text-sm mb-4">
                                <div class="flex justify-between">
                                    <span class="text-muted-foreground">{{ 'dashboard.sessions_used'|trans }}:</span>
                                    <span>{{ booking.lessonsMap.getActiveCount() }} z {{ booking.lessonsMap.getTotalCount() }}</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-muted-foreground">{{ 'dashboard.valid_until'|trans }}:</span>
                                    {% set latestDate = null %}
                                    {% for lesson in booking.lessons %}
                                        {% if latestDate is null or lesson.metadata.schedule > latestDate %}
                                            {% set latestDate = lesson.metadata.schedule %}
                                        {% endif %}
                                    {% endfor %}
                                    <span>{{ latestDate ? latestDate|date('d.m.Y') : 'N/A' }}</span>
                                </div>
                            </div>
                            <div class="bg-muted rounded-lg h-2 mb-1">
                                {% set progress = (booking.lessonsMap.getTotalCount() > 0) ? (booking.lessonsMap.getPastCount() / booking.lessonsMap.getTotalCount()) * 100 : 0 %}
                                <div class="h-2 rounded-lg bg-workshop-green"
                                     style="width: {{ progress }}%;"></div>
                            </div>
                            <p class="text-xs text-right text-muted-foreground">
                                {{ 'dashboard.sessions_remaining'|trans({
                                    'count': booking.lessonsMap.getTotalCount() - booking.lessonsMap.getPastCount(),
                                    '%count%': booking.lessonsMap.getTotalCount() - booking.lessonsMap.getPastCount()
                                }) }}
                            </p>

                            <div class="mt-4 pt-4 border-t">
                                <h4 class="text-sm font-medium mb-2">{{ 'dashboard.upcoming_sessions'|trans }}:</h4>
                                <ul class="space-y-2 text-sm">
                                    {% set upcomingSessions = [] %}
                                    {% for lesson in booking.lessons|filter(l => l.metadata.schedule > date())|sort((a, b) => a.metadata.schedule <=> b.metadata.schedule) %}
                                        {% set upcomingSessions = upcomingSessions|merge([{
                                            'lesson': lesson,
                                            'booking': booking
                                        }]) %}
                                    {% endfor %}

                                    {% for session in upcomingSessions %}
                                        {% set isCancelled = session.booking.lessonsMap.isCancelledLesson(session.lesson.id) %}
                                        {% set isRescheduled = session.booking.lessonsMap.isRescheduledLesson(session.lesson.id) %}
                                        <li class="flex items-center {{ isCancelled ? 'text-muted-foreground' : '' }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                 viewBox="0 0 24 24" stroke="currentColor"
                                                 stroke-width="2" stroke-linecap="round"
                                                 stroke-linejoin="round"
                                                 class="lucide lucide-calendar-days mr-2 text-workshop-red">
                                                <rect width="18" height="18" x="3" y="4" rx="2"
                                                      ry="2"></rect>
                                                <line x1="16" x2="16" y1="2" y2="6"></line>
                                                <line x1="8" x2="8" y1="2" y2="6"></line>
                                                <line x1="3" x2="21" y1="10" y2="10"></line>
                                                <path d="M8 14h.01"></path>
                                                <path d="M12 14h.01"></path>
                                                <path d="M16 14h.01"></path>
                                                <path d="M8 18h.01"></path>
                                                <path d="M12 18h.01"></path>
                                                <path d="M16 18h.01"></path>
                                            </svg>
                                            <span class="{{ isCancelled ? 'line-through' : '' }}">
                                                {{ session.lesson.metadata.schedule|date('d.m.Y H:i:s')|format_datetime(pattern: 'd MMMM') }} {{ 'dashboard.at'|trans }} {{ session.lesson.getMetadata().schedule|date('H:i') }}
                                            </span>
                                            {% if isCancelled %}
                                                <span class="ml-2 inline-flex items-center rounded-full bg-red-50 text-red-700 px-2.5 py-0.5 text-xs font-semibold border border-red-200">
                                                    {{ isRescheduled ? 'rescheduled' : 'cancelled' }}
                                                </span>
                                            {% endif %}
                                        </li>
                                    {% else %}
                                        <li class="text-muted-foreground">{{ 'dashboard.no_upcoming_sessions'|trans }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}
</div>

<div {{ attributes }} class="rounded-xl border bg-stone-50 text-card-foreground shadow">
    <div class="flex flex-col space-y-1.5 p-6">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 gap-4">
            <h3 class="flex items-center gap-3 text-xl font-serif font-semibold leading-none tracking-tight">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="lucide lucide-users w-5 h-5">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                    <circle cx="9" cy="7" r="4"/>
                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
                <span>{{ 'admin_dashboard.upcoming_attendees.title'|trans }}</span>
            </h3>
            <div class="flex flex-wrap items-center gap-2">
                <button
                        type="button"
                        data-action="live#action"
                        data-live-action-param="toggleCancelled"
                        class="px-3 py-1.5 border rounded-md hover:bg-gray-50 flex items-center text-sm {{ this.showCancelled ? 'bg-gray-100 border-gray-400' : 'bg-white' }}"
                        title="{{ this.showCancelled ? 'admin_dashboard.upcoming_attendees.hide_cancelled'|trans : 'admin_dashboard.upcoming_attendees.show_cancelled'|trans }}"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        {% if this.showCancelled %}
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                        {% else %}
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        {% endif %}
                    </svg>
                    <span class="sr-only">{{ this.showCancelled ? ('admin_dashboard.upcoming_attendees.hide_cancelled'|trans) : ('admin_dashboard.upcoming_attendees.show_cancelled'|trans) }}</span>
                </button>
                <button
                        type="button"
                        data-model="week"
                        data-value="{{ this.week|date_modify('-7 days')|date('Y-m-d') }}"
                        data-action="live#update"
                        class="px-3 py-1.5 border rounded-md hover:bg-gray-50 flex items-center text-sm"
                        title="{{ 'lesson.previous_week'|trans }}"
                >
                    <span class="sr-only">{{ 'lesson.previous_week'|trans }}</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                         xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>
                <span class="px-3 py-1.5 text-sm bg-gray-100 rounded-md whitespace-nowrap">
                    {{ this.weekStart|date('d.m') }} - {{ this.weekEnd|date('d.m') }}
                </span>
                <button
                        type="button"
                        data-model="week"
                        data-value="{{ this.week|date_modify('+7 days')|date('Y-m-d') }}"
                        data-action="live#update"
                        class="px-3 py-1.5 border rounded-md hover:bg-gray-50 flex items-center text-sm"
                        title="{{ 'lesson.next_week'|trans }}"
                >
                    <span class="sr-only">{{ 'lesson.next_week'|trans }}</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                         xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <div class="p-6 pt-0">
        <div class="space-y-6">
            {% if this.lessons is not empty %}
                {% for lesson in this.lessons %}
                    <div class="space-y-3 {{ lesson.status == 'cancelled' ? 'opacity-60' : '' }}">
                        <div class="flex items-center justify-between p-3 bg-muted/50 rounded-lg {{ lesson.status == 'cancelled' ? 'bg-red-50 border border-red-200' : '' }}">
                            <div>
                                <h4 class="font-medium {{ lesson.status == 'cancelled' ? 'line-through text-red-600' : '' }}">
                                    {{ lesson.metadata.title }}
                                    {% if lesson.status == 'cancelled' %}
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800 ml-2">
                                            {{ 'admin_dashboard.bookings.status.cancelled'|trans }}
                                        </span>
                                        <span class="text-xs text-muted-foreground ml-2">
                                            ({{ lesson.bookings|filter(b => b.lessonsMap.cancelled.hasKey(lesson.id))|length }} {{ 'admin_dashboard.upcoming_attendees.cancelled_bookings'|trans }})
                                        </span>
                                    {% endif %}
                                </h4>
                                <p class="text-sm text-muted-foreground">
                                    {{ lesson.metadata.schedule|format_datetime('medium', 'short') }} •
                                    {% set activeBookings = lesson.bookings|filter(b => b.active and b.lessonsMap.active.hasKey(lesson.id)) %}
                                    {{ activeBookings|length }}
                                    /{{ lesson.metadata.capacity }} {{ 'admin_dashboard.capacity'|trans }}
                                </p>
                            </div>
                            {% if lesson.status != 'cancelled' %}
                                <div class="flex items-center gap-2">
                                    <button
                                            data-action="click->live#action"
                                            data-live-action-param="decreaseCapacity"
                                            data-live-lesson-id-param="{{ lesson.id }}"
                                            class="inline-flex items-center justify-center w-9 h-9 rounded-md border border-input bg-background hover:bg-accent hover:text-accent-foreground disabled:opacity-50 disabled:pointer-events-none"
                                            {{ lesson.metadata.capacity <= activeBookings|length ? 'disabled' : '' }}
                                            title="{{ 'admin_dashboard.upcoming_attendees.decrease_capacity'|trans }}"
                                    >
                                        <span class="sr-only">{{ 'admin_dashboard.upcoming_attendees.decrease_capacity'|trans }}</span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                             stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                                            <path d="M5 12h14"/>
                                        </svg>
                                    </button>

                                    <span class="text-sm font-medium min-w-[2rem] text-center">
                                        {{ lesson.availableSpots }}
                                    </span>

                                    <button
                                            data-action="click->live#action"
                                            data-live-action-param="increaseCapacity"
                                            data-live-lesson-id-param="{{ lesson.id }}"
                                            class="inline-flex items-center justify-center w-9 h-9 rounded-md border border-input bg-background hover:bg-accent hover:text-accent-foreground"
                                            title="{{ 'admin_dashboard.upcoming_attendees.increase_capacity'|trans }}"
                                    >
                                        <span class="sr-only">{{ 'admin_dashboard.upcoming_attendees.increase_capacity'|trans }}</span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                             stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                                            <path d="M5 12h14"/>
                                            <path d="M12 5v14"/>
                                        </svg>
                                    </button>
                                    <button
                                            data-action="click->live#action"
                                            data-live-action-param="openFastBooking"
                                            data-live-lesson-id-param="{{ lesson.id }}"
                                            class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 bg-primary text-primary-foreground hover:bg-primary/90 h-9 rounded-md px-3">{{ 'admin_dashboard.upcoming_attendees.quick_book'|trans }}</button>
                                </div>
                            {% endif %}
                        </div>

                        <div class="space-y-2">
                            {% set activeBookings = this.showCancelled ? lesson.bookings : lesson.bookings|filter(b => b.active and (b.lessonsMap.active.hasKey(lesson.id) or b.lessonsMap.past.hasKey(lesson.id)) %}
                            {% if activeBookings is not empty %}
                                {% for booking in activeBookings %}
                                    <div class="flex items-center justify-between p-2 border rounded">
                                        <div>
                                            <p class="text-sm font-medium">{{ booking.user.name }}</p>
                                            <p class="text-xs text-muted-foreground">{{ booking.user.email }}</p>
                                            {% if booking.notes %}
                                                <p class="text-xs mt-1 italic text-workshop-brown">Notatka: {{ booking.notes }}</p>
                                            {% endif %}
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors {{ booking.payment and booking.payment.status == 'paid' ? 'border-transparent bg-primary text-primary-foreground' : 'border-transparent bg-secondary text-secondary-foreground' }}">
                                                {{ booking.payment and booking.payment.status == 'paid' ? 'admin.badges.paid'|trans : 'admin.badges.unpaid'|trans }}
                                            </span>

                                            {# Actions dropdown #}
                                            {% set bId = booking.id %}
                                            <div class="relative">
                                                <button type="button"
                                                        data-action="click->live#action"
                                                        data-live-action-param="openActions"
                                                        data-live-booking-id-param="{{ bId }}"
                                                        class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 rounded-md px-3">
                                                    {{ 'admin_dashboard.upcoming_attendees.actions'|trans }}
                                                </button>
                                                {% if this.actionsForBookingId and this.actionsForBookingId == (bId ~ '') %}
                                                    <div class="absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-10">
                                                        <div class="py-1">
                                                            {% set isPaid = booking.payment and booking.payment.status == 'paid' %}
                                                            {% if not isPaid %}
                                                                <button type="button"
                                                                        class="w-full text-left px-4 py-2 text-sm hover:bg-gray-100"
                                                                        data-action="click->live#action"
                                                                        data-live-action-param="payForBooking"
                                                                        data-live-booking-id-param="{{ bId }}"
                                                                        data-live-lesson-id-param="{{ lesson.id }}">
                                                                    Zapłać
                                                                </button>
                                                            {% endif %}
                                                            <div class="border-t my-1"></div>
                                                            {# Reschedule/Cancel using embedded modal #}
                                                            <div class="px-1">
                                                                {{ component('App\\UserInterface\\Http\\Component\\BookingCancellationModal', { booking: booking, lesson: lesson }) }}
                                                            </div>
                                                            <button type="button"
                                                                    class="w-full text-left px-4 py-2 text-sm hover:bg-gray-100"
                                                                    data-action="click->live#action"
                                                                    data-live-action-param="closeActions"
                                                                    data-live-component-id-param="{{ attributes.id }}"
                                                                    onclick="this.closest('.relative').querySelector('dialog')?.remove()">
                                                                Zamknij
                                                            </button>
                                                            <div class="border-t my-1"></div>
                                                            {% if isPaid %}
                                                                <button type="button"
                                                                        class="w-full text-left px-4 py-2 text-sm hover:bg-gray-100"
                                                                        data-action="click->live#action"
                                                                        data-live-action-param="markUnpaid"
                                                                        data-live-booking-id-param="{{ bId }}">
                                                                    Oznacz jako nieopłacone
                                                                </button>
                                                            {% else %}
                                                                <button type="button"
                                                                        class="w-full text-left px-4 py-2 text-sm hover:bg-gray-100"
                                                                        data-action="click->live#action"
                                                                        data-live-action-param="markPaid"
                                                                        data-live-booking-id-param="{{ bId }}">
                                                                    Oznacz jako opłacone
                                                                </button>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="text-sm text-center text-muted-foreground py-4">{{ 'admin_dashboard.upcoming_attendees.no_attendees'|trans }}</p>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-sm text-center text-muted-foreground py-8">{{ 'admin_dashboard.upcoming_attendees.no_upcoming_attendees'|trans }}</p>
            {% endif %}
        </div>
    </div>

    {# Fast booking modal #}
    <div data-action="click->live#action"
         data-live-action-param="closeModal"
         class="{% if not this.modalOpened %}hidden{% endif %} fixed inset-0 z-50 bg-black/60"></div>

    <dialog {% if this.modalOpened %}open{% endif %}
            class="fixed top-1/2 left-1/2 z-50 w-full -translate-x-1/2 -translate-y-1/2 gap-4 border bg-background p-6 shadow-lg duration-200 sm:rounded-lg max-w-xl">
        {% set sel = this.selectedLessonId ? (this.lessons|filter(l => (l.id ~ '') == this.selectedLessonId)|first) : null %}
        <h3 class="text-lg font-semibold mb-4">Szybka rezerwacja{% if sel %}: {{ sel.metadata.title }} ({{ sel.metadata.schedule|date('Y-m-d H:i') }}){% endif %}</h3>

        {% if this.errorMessage %}
            <div class="mb-3 p-2 text-sm rounded bg-red-100 text-red-800">{{ this.errorMessage }}</div>
        {% endif %}
        {% if this.successMessage %}
            <div class="mb-3 p-2 text-sm rounded bg-green-100 text-green-800">{{ this.successMessage }}</div>
        {% endif %}

        <div class="grid gap-3">
            <div>
                <label class="block text-sm font-medium mb-1">Wybierz istniejącego użytkownika (opcjonalnie)</label>
                {% if this.selectedUserId %}
                    <div class="flex items-center justify-between p-2 border rounded bg-gray-50">
                        <div class="text-sm">
                            <div class="font-medium">{{ this.customerName }}</div>
                            <div class="text-muted-foreground">{{ this.customerEmail }}</div>
                        </div>
                        <button class="btn-outline" type="button" data-action="live#action" data-live-action-param="clearSelectedUser">Wyczyść</button>
                    </div>
                {% else %}
                    <div class="relative">
                        <input type="text" class="w-full border rounded px-3 py-2" placeholder="Szukaj po imieniu lub e-mailu..." data-model="userSearch">
                        {% if this.userSearch and this.userSearch|length >= 2 %}
                            {% set found = this.filteredUsers %}
                            <div class="absolute z-10 w-full mt-1 bg-white border rounded shadow max-h-48 overflow-y-auto">
                                {% if found|length > 0 %}
                                    {% for u in found %}
                                        <button type="button" class="w-full text-left px-3 py-2 hover:bg-gray-100" data-action="live#action" data-live-action-param="selectExistingUser" data-live-user-id-param="{{ u.id }}">
                                            <div class="font-medium">{{ u.name }}</div>
                                            <div class="text-xs text-muted-foreground">{{ u.email }}</div>
                                        </button>
                                    {% endfor %}
                                {% else %}
                                    <div class="px-3 py-2 text-sm text-muted-foreground">Brak wyników dla "{{ this.userSearch }}"</div>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">E-mail</label>
                <input type="email" class="w-full border rounded px-3 py-2" data-model="customerEmail" placeholder="email@domena.pl">
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Imię i nazwisko</label>
                <input type="text" class="w-full border rounded px-3 py-2" data-model="customerName" placeholder="Jan Kowalski">
            </div>
            <div>
                <label class="block text-sm font-medium mb-1">Notatka (opcjonalnie)</label>
                <textarea class="w-full border rounded px-3 py-2" rows="3" data-model="notes" placeholder="np. prośba o miejsce obok rodzeństwa"></textarea>
            </div>
        </div>

        <div class="flex justify-end gap-3 mt-5">
            <button class="btn-outline" type="button" data-action="live#action" data-live-action-param="closeModal">{{ 'action.cancel'|trans }}</button>
            <button class="btn-primary" type="button" data-action="live#action" data-live-action-param="confirmFastBooking">Zapisz</button>
        </div>
    </dialog>

    {# Booking payment modal (BLIK instructions) #}
    <div data-action="click->live#action"
         data-live-action-param="closePaymentModal"
         class="{% if not this.paymentModalOpened %}hidden{% endif %} fixed inset-0 z-50 bg-black/60"></div>
    <dialog {% if this.paymentModalOpened %}open{% endif %}
            class="fixed top-1/2 left-1/2 z-50 w-full -translate-x-1/2 -translate-y-1/2 gap-4 border bg-background p-6 shadow-lg duration-200 sm:rounded-lg max-w-xl">
        {% if this.paymentCode and this.paymentAmount %}
            <div class="flex flex-col items-center justify-center min-h-[260px]">
                <div class="bg-white border border-gray-200 rounded-lg shadow-md p-8 max-w-lg w-full text-center">
                    <div class="text-2xl font-bold text-workshop-brown mb-4">
                        {{ 'blik.instruction'|trans }} <span class="text-workshop-red whitespace-nowrap"> {{ tenant_phone() ?? ('blik.phone'|trans) }}</span>
                    </div>
                    <div class="text-lg mb-2">{{ 'blik.instruction_2'|trans }} <span class="text-workshop-red whitespace-nowrap">{{ this.paymentAmount|money }}</span>. {{ 'blik.instruction_3'|trans }}</div>
                    <div class="text-2xl font-mono bg-gray-100 rounded p-4 mb-4 select-all tracking-widest text-workshop-red">{{ this.paymentCode }}</div>
                    <div class="text-muted-foreground text-sm mb-4">{{ 'blik.info'|trans }}</div>
                    <div class="text-muted-foreground text-sm border-t pt-4 mt-4">
                        {{ 'blik.alt_transfer'|trans({'title': this.paymentCode,'account': '<span class="text-workshop-red whitespace-nowrap">' ~ (tenant_account() ?? '46 2490 0005 0000 4000 1897 5420') ~ '</span>'})|raw }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center p-4 text-muted-foreground">Brak danych płatności.</div>
        {% endif %}
        <div class="flex justify-end mt-6">
            <button type="button"
                    data-action="live#action"
                    data-live-action-param="closePaymentModal"
                    class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 border bg-background hover:text-accent-foreground h-10 px-4 py-2">
                {{ 'action.close'|trans }}
            </button>
        </div>
    </dialog>
</div>

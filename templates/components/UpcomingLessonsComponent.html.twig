<div {{ attributes }} class="rounded-xl border bg-stone-50 text-card-foreground shadow">
    <div class="flex flex-col space-y-1.5 p-6">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 gap-4">
            <h3 class="flex items-center gap-3 text-xl font-serif font-semibold leading-none tracking-tight">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-days w-5 h-5"><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M16 2v4"/><path d="M8 2v4"/><path d="M3 10h18"/><path d="M8 14h.01"/><path d="M12 14h.01"/><path d="M16 14h.01"/><path d="M8 18h.01"/><path d="M12 18h.01"/><path d="M16 18h.01"/></svg>
                <span>{{ 'admin_dashboard.upcoming_lessons.title'|trans }}</span>
            </h3>
            <div class="flex flex-wrap items-center gap-2">
                <button
                    type="button"
                    data-action="live#action"
                    data-live-action-param="toggleCancelled"
                    class="px-3 py-1.5 border rounded-md hover:bg-gray-50 flex items-center text-sm {{ this.showCancelled ? 'bg-gray-100 border-gray-400' : 'bg-white' }}"
                    title="{{ this.showCancelled ? 'Hide cancelled lessons' : 'Show cancelled lessons' }}"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        {% if this.showCancelled %}
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                        {% else %}
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        {% endif %}
                    </svg>
                    <span class="sr-only">{{ this.showCancelled ? 'Hide cancelled' : 'Show cancelled' }}</span>
                </button>
                <button
                    type="button"
                    data-model="week"
                    data-value="{{ this.week|date_modify('-7 days')|date('Y-m-d') }}"
                    data-action="live#update"
                    class="px-3 py-1.5 border rounded-md hover:bg-gray-50 flex items-center text-sm"
                    title="{{ 'lesson.previous_week'|trans }}"
                >
                    <span class="sr-only">{{ 'lesson.previous_week'|trans }}</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>
                <span class="px-3 py-1.5 text-sm bg-gray-100 rounded-md whitespace-nowrap">
                    {{ this.weekStart|date('m.d') }} - {{ this.weekEnd|date('m.d') }}
                </span>
                <button
                    type="button"
                    data-model="week"
                    data-value="{{ this.week|date_modify('+7 days')|date('Y-m-d') }}"
                    data-action="live#update"
                    class="px-3 py-1.5 border rounded-md hover:bg-gray-50 flex items-center text-sm"
                    title="{{ 'lesson.next_week'|trans }}"
                >
                    <span class="sr-only">{{ 'lesson.next_week'|trans }}</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <div class="p-6 pt-0">
        <div class="space-y-4">
            {% if this.lessons is not empty %}
                {% for lesson in this.lessons %}
                    <div class="flex items-center justify-between p-4 border rounded-lg {{ lesson.status == 'cancelled' ? 'bg-red-50 border-red-200 opacity-60' : '' }}">
                        <div class="flex-1">
                            <h4 class="font-medium {{ lesson.status == 'cancelled' ? 'line-through text-red-600' : '' }}">
                                {{ lesson.metadata.title }}
                                {% if lesson.status == 'cancelled' %}
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800 ml-2">
                                        Cancelled
                                    </span>
                                {% endif %}
                            </h4>
                            <p class="text-sm text-muted-foreground">{{ lesson.metadata.schedule|format_datetime('medium', 'short') }}</p>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
                                {{ lesson.bookings|length }}/{{ lesson.metadata.capacity }}
                            </span>
                            {% if lesson.status != 'cancelled' %}
                                <button disabled class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 rounded-md px-3" data-action="live#action" data-action-name="prevent:openModal">
                                    {{ 'admin_dashboard.upcoming_lessons.actions'|trans }}
                                </button>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-sm text-center text-muted-foreground py-8">{{ 'admin_dashboard.upcoming_lessons.no_upcoming_lessons'|trans }}</p>
            {% endif %}
        </div>
    </div>
</div>

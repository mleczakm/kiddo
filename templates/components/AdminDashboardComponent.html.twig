<div {{ attributes }} data-controller="live">
    <div class="flex justify-center mb-8">
        <div class="inline-flex items-center justify-center rounded-xl bg-stone-100 p-1">
            <a
                href="{{ this.getTabUrl('dashboard') }}"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-lg px-4 py-2 text-base font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 {{ activeTab == 'dashboard' ? 'bg-background shadow-sm text-foreground' : 'text-muted-foreground hover:bg-stone-200/50' }}"
            >
                {{ 'admin.tabs.dashboard'|trans }}
            </a>
            <a
                href="{{ this.getTabUrl('lessons') }}"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-lg px-4 py-2 text-base font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 {{ activeTab == 'lessons' ? 'bg-background shadow-sm text-foreground' : 'text-muted-foreground hover:bg-stone-200/50' }}"
            >
                {{ 'admin.tabs.lessons'|trans }}
            </a>
            <a
                href="{{ this.getTabUrl('schedule') }}"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-lg px-4 py-2 text-base font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 {{ activeTab == 'schedule' ? 'bg-background shadow-sm text-foreground' : 'text-muted-foreground hover:bg-stone-200/50' }}"
            >
                {{ 'admin.tabs.schedule'|trans }}
            </a>
            <a
                href="{{ this.getTabUrl('transfers') }}"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-lg px-4 py-2 text-base font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 {{ activeTab == 'transfers' ? 'bg-background shadow-sm text-foreground' : 'text-muted-foreground hover:bg-stone-200/50' }}"
            >
                {{ 'admin.tabs.transfers'|trans }}
            </a>
            <a
                href="{{ this.getTabUrl('bookings') }}"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-lg px-4 py-2 text-base font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 {{ activeTab == 'bookings' ? 'bg-background shadow-sm text-foreground' : 'text-muted-foreground hover:bg-stone-200/50' }}"
            >
                {{ 'admin.tabs.bookings'|trans }}
            </a>
            <a
                href="{{ this.getTabUrl('users') }}"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-lg px-4 py-2 text-base font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 {{ activeTab == 'users' ? 'bg-background shadow-sm text-foreground' : 'text-muted-foreground hover:bg-stone-200/50' }}"
            >
                {{ 'admin.tabs.users'|trans }}
            </a>
            <a
                href="{{ this.getTabUrl('messages') }}"
                class="inline-flex items-center justify-center whitespace-nowrap rounded-lg px-4 py-2 text-base font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 {{ activeTab == 'messages' ? 'bg-background shadow-sm text-foreground' : 'text-muted-foreground hover:bg-stone-200/50' }}"
            >
                {{ 'admin.tabs.messages'|trans }}
            </a>
        </div>
    </div>

    <div class="space-y-6">
        {% if activeTab == 'dashboard' %}
            <div class="grid xl:grid-cols-2 gap-8">
                {{ component('UpcomingLessonsComponent') }}
                {{ component('UpcomingAttendeesComponent') }}
            </div>

            <div class="rounded-xl border bg-stone-50 text-card-foreground shadow p-6">
                <h3 class="flex items-center gap-3 text-xl font-serif font-semibold leading-none tracking-tight mb-6">

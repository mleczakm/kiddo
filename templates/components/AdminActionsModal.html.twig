<div data-action="click->live#action"
     data-live-action-param="closeAdminModal"
     class="fixed inset-0 z-40 bg-black/50 transition-opacity duration-200 {{ not this.adminModalOpened ? 'opacity-0 pointer-events-none' : '' }}">
</div>

<dialog {% if this.adminModalOpened %}open{% endif %}
        class="fixed top-1/2 left-1/2 z-50 w-full -translate-x-1/2 -translate-y-1/2 gap-4 border bg-background p-6 shadow-lg duration-200 sm:rounded-lg max-w-xl">
    <div class="flex flex-col space-y-4">
        <div class="flex justify-between items-center">
            <h3 class="text-lg font-semibold">{{ 'admin_dashboard.upcoming_attendees.admin_actions'|trans }}</h3>
            <button type="button" 
                    data-action="click->live#action" 
                    data-live-action-param="closeAdminModal"
                    class="text-gray-500 hover:text-gray-700">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        {% if not this.adminAction %}
            <div class="space-y-2">
                <button type="button"
                        data-action="click->live#action"
                        data-live-action-param="setAdminAction"
                        data-live-action-value-param="add_note"
                        class="w-full flex items-center gap-3 px-4 py-3 hover:bg-gray-50 rounded-lg transition-colors">
                    <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    <span>{{ 'admin_dashboard.upcoming_attendees.add_note'|trans }}</span>
                </button>
                
                <button type="button"
                        data-action="click->live#action"
                        data-live-action-param="setAdminAction"
                        data-live-action-value-param="cancel"
                        class="w-full flex items-center gap-3 px-4 py-3 hover:bg-red-50 text-red-600 rounded-lg transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    <span>{{ 'admin_dashboard.upcoming_attendees.cancel_booking'|trans }}</span>
                </button>
                
                <button type="button"
                        data-action="click->live#action"
                        data-live-action-param="setAdminAction"
                        data-live-action-value-param="mark_refund"
                        class="w-full flex items-center gap-3 px-4 py-3 hover:bg-amber-50 text-amber-600 rounded-lg transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>{{ 'admin_dashboard.upcoming_attendees.mark_refund'|trans }}</span>
                </button>
                
                <button type="button"
                        data-action="click->live#action"
                        data-live-action-param="setAdminAction"
                        data-live-action-value-param="reschedule"
                        class="w-full flex items-center gap-3 px-4 py-3 hover:bg-blue-50 text-blue-600 rounded-lg transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span>{{ 'admin_dashboard.upcoming_attendees.reschedule'|trans }}</span>
                </button>
            </div>
        {% else %}
            <form data-action="submit->live#action" data-live-action-param="executeAdminAction">
                {% if this.errorMessage %}
                    <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
                        {{ this.errorMessage }}
                    </div>
                {% endif %}

                {% if this.successMessage %}
                    <div class="mb-4 p-3 bg-green-100 text-green-700 rounded">
                        {{ this.successMessage }}
                    </div>
                {% endif %}

                {% if this.adminAction == 'add_note' %}
                    <div class="space-y-4">
                        <div class="bg-blue-50 p-4 rounded-lg">
                            <h4 class="font-medium text-blue-800 flex items-center gap-2 mb-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                {{ 'admin_dashboard.upcoming_attendees.add_note'|trans }}
                            </h4>
                            <p class="text-sm text-blue-700">
                                {{ 'admin_dashboard.upcoming_attendees.add_note_help'|trans }}
                            </p>
                        </div>
                        
                        <div>
                            <label for="adminNote" class="block text-sm font-medium text-gray-700 mb-1">
                                {{ 'admin_dashboard.upcoming_attendees.note'|trans }}
                            </label>
                            <textarea id="adminNote"
                                    name="adminNote"
                                    data-model="adminNote"
                                    class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                    rows="4"
                                    placeholder="{{ 'admin_dashboard.upcoming_attendees.note_placeholder'|trans }}">{{ this.adminNote }}</textarea>
                        </div>
                        
                        <div class="flex justify-end space-x-3 pt-2">
                            <button type="button"
                                    data-action="click->live#action"
                                    data-live-action-param="setAdminAction"
                                    data-live-action-value-param=""
                                    class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                {{ 'common.cancel'|trans }}
                            </button>
                            <button type="submit" 
                                    class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                {{ 'common.save'|trans }}
                            </button>
                        </div>
                    </div>

                {% elseif this.adminAction == 'reschedule' %}
                    <div class="space-y-4">
                        <div class="bg-blue-50 p-4 rounded-lg">
                            <h4 class="font-medium text-blue-800 flex items-center gap-2 mb-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                {{ 'admin_dashboard.upcoming_attendees.reschedule_booking'|trans }}
                            </h4>
                            <p class="text-sm text-blue-700">
                                {{ 'admin_dashboard.upcoming_attendees.reschedule_help'|trans }}
                            </p>
                        </div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label for="rescheduleDate" class="block text-sm font-medium text-gray-700 mb-1">
                                    {{ 'admin_dashboard.upcoming_attendees.new_date'|trans }}
                                </label>
                                <input type="date"
                                       id="rescheduleDate"
                                       data-model="rescheduleDate"
                                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                       required>
                            </div>
                            <div>
                                <label for="rescheduleTime" class="block text-sm font-medium text-gray-700 mb-1">
                                    {{ 'admin_dashboard.upcoming_attendees.new_time'|trans }}
                                </label>
                                <input type="time"
                                       id="rescheduleTime"
                                       data-model="rescheduleTime"
                                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                       required>
                            </div>
                        </div>
                        
                        <div class="flex justify-end space-x-3 pt-2">
                            <button type="button"
                                    data-action="click->live#action"
                                    data-live-action-param="setAdminAction"
                                    data-live-action-value-param=""
                                    class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                {{ 'common.cancel'|trans }}
                            </button>
                            <button type="submit" 
                                    class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                {{ 'admin_dashboard.upcoming_attendees.reschedule_booking'|trans }}
                            </button>
                    </div>
                            <button type="button"
                                    data-action="click->live#action"
                                    data-live-action-param="setAdminAction"
                                    data-live-action-value-param=""
                                    class="px-4 py-2 border rounded hover:bg-gray-50">
                                {{ 'common.cancel'|trans }}
                            </button>
                            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                                {{ 'admin_dashboard.upcoming_attendees.reschedule_booking'|trans }}
                            </button>
                        </div>
                    </div>

                {% elseif this.adminAction == 'cancel' %}
                    <div class="space-y-4">
                        <div class="bg-red-50 p-4 rounded-lg">
                            <h4 class="font-medium text-red-800 flex items-center gap-2 mb-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                                {{ 'admin_dashboard.upcoming_attendees.cancel_booking'|trans }}
                            </h4>
                            <p class="text-sm text-red-700">
                                {{ 'admin_dashboard.upcoming_attendees.cancel_help'|trans }}
                            </p>
                        </div>
                        
                        <p class="text-gray-700 py-2">
                            {{ 'admin_dashboard.upcoming_attendees.confirm_cancel'|trans }}
                        </p>
                        
                        <div class="flex justify-end space-x-3 pt-2">
                            <button type="button"
                                    data-action="click->live#action"
                                    data-live-action-param="setAdminAction"
                                    data-live-action-value-param=""
                                    class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                {{ 'common.cancel'|trans }}
                            </button>
                            <button type="submit" 
                                    class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                {{ 'admin_dashboard.upcoming_attendees.confirm_cancel_btn'|trans }}
                            </button>
                        </div>
                    </div>
                    
                {% elseif this.adminAction == 'mark_refund' %}
                    <div class="space-y-4">
                        <div class="bg-amber-50 p-4 rounded-lg">
                            <h4 class="font-medium text-amber-800 flex items-center gap-2 mb-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                {{ 'admin_dashboard.upcoming_attendees.mark_refund'|trans }}
                            </h4>
                            <p class="text-sm text-amber-700">
                                {{ 'admin_dashboard.upcoming_attendees.mark_refund_help'|trans }}
                            </p>
                        </div>
                        
                        <p class="text-gray-700 py-2">
                            {{ 'admin_dashboard.upcoming_attendees.confirm_mark_refund'|trans }}
                        </p>
                        
                        <div class="flex justify-end space-x-3 pt-2">
                            <button type="button"
                                    data-action="click->live#action"
                                    data-live-action-param="setAdminAction"
                                    data-live-action-value-param=""
                                    class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                {{ 'common.cancel'|trans }}
                            </button>
                            <button type="submit" 
                                    class="px-4 py-2 text-sm font-medium text-white bg-amber-600 border border-transparent rounded-lg shadow-sm hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                                {{ 'admin_dashboard.upcoming_attendees.confirm_mark_refund_btn'|trans }}
                            </button>
                        </div>
                    </div>
                    
                {% else %}
                    <div class="space-y-4">
                        <p class="text-gray-700">
                            {% if this.adminAction == 'cancel' %}
                                {{ 'admin_dashboard.upcoming_attendees.confirm_cancel'|trans }}
                            {% elseif this.adminAction == 'mark_refund' %}
                                {{ 'admin_dashboard.upcoming_attendees.confirm_refund'|trans }}
                            {% endif %}
                        </p>
                        <div class="flex justify-end space-x-2">
                            <button type="button"
                                    data-action="click->live#action"
                                    data-live-action-param="setAdminAction"
                                    data-live-action-value-param=""
                                    class="px-4 py-2 border rounded hover:bg-gray-50">
                                {{ 'common.cancel'|trans }}
                            </button>
                            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                                {{ 'common.confirm'|trans }}
                            </button>
                        </div>
                    </div>
                {% endif %}
            </form>
        {% endif %}
    </div>
</dialog>

<script>
    document.addEventListener('live:action:success', (event) => {
        if (event.detail.response.successMessage) {
            setTimeout(() => {
                const modal = document.querySelector('dialog[open]');
                if (modal) {
                    modal.dispatchEvent(new Event('close'));
                }
            }, 1500);
        }
    });
</script>

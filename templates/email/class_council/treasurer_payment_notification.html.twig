{% extends 'email/base_plain.html.twig' %}

{% block content %}
<h2>Podsumowanie zaległości w klasie</h2>
<p>Klasa: <strong>{{ classRoomName }}</strong></p>
<p>Rodzic: <strong>{{ parentName }}</strong> ({{ parentEmail }})</p>
<ul>
    {% for item in items %}
        <li>
            <strong>{{ item.student }}</strong>: {{ item.label }} - {{ item.amount.getAmount() }} PLN, status: {{ item.status }}
            {% if item.paidAt %} (opłacono: {{ item.paidAt|date('Y-m-d') }}){% endif %}
            {% if item.dueAt %} (termin: {{ item.dueAt|date('Y-m-d') }}){% endif %}
        </li>
    {% endfor %}
</ul>
<p>Łączna kwota zaległości: <strong>{{ missingAmount }} PLN</strong></p>
{% endblock %}


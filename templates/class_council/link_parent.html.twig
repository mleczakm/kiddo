{% extends 'base.html.twig' %}

{% block body %}
<main class="flex-grow container mx-auto px-4 py-8">
  <h1 class="text-2xl font-display font-bold text-workshop-brown mb-6">Powiąż rodzica z uczniem</h1>
  <form method="post" class="space-y-4 max-w-xl p-4 border rounded">
    <div>
      <label class="block text-sm font-medium mb-1">Uczeń</label>
      <select name="student_id" class="w-full border rounded px-3 py-2" required>
        <option value="">— wybierz —</option>
        {% for s in students %}
          <option value="{{ s.id }}">{{ s.firstName }} {{ s.lastName }}</option>
        {% endfor %}
      </select>
    </div>
    <div>
      <label class="block text-sm font-medium mb-1">E-mail rodzica (musi istnieć w systemie)</label>
      <input name="email" type="email" class="w-full border rounded px-3 py-2" required>
    </div>
    <button class="btn-primary" type="submit">Powiąż</button>
  </form>
</main>
{% endblock %}

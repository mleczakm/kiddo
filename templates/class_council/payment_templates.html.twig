{% extends 'base.html.twig' %}

{% block body %}
<main class="flex-grow container mx-auto px-4 py-8">
  <h1 class="text-2xl font-display font-bold text-workshop-brown mb-6">Szablony składek</h1>
  <div class="mb-6">Klasa: <strong>{{ classRoom.name }}</strong></div>

  <form method="post" class="space-y-4 max-w-xl mb-8 p-4 border rounded bg-white">
    <h2 class="text-lg font-semibold">Dodaj szablon składki</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium mb-1">Nazwa</label>
        <input name="label" type="text" class="w-full border rounded px-3 py-2" required>
      </div>
      <div>
        <label class="block text-sm font-medium mb-1">Kwota (PLN)</label>
        <input name="amount_pln" type="number" step="0.01" class="w-full border rounded px-3 py-2" required>
      </div>
    </div>
    <button class="btn-primary" type="submit">Dodaj szablon</button>
  </form>

  <div class="mb-4 flex gap-3">
    <form method="post" action="{{ path('cc_payment_templates_apply') }}">
      <button class="btn-outline" type="submit">Zastosuj do wszystkich uczniów</button>
    </form>
    <a class="btn-outline" href="{{ path('cc_treasurer_overview') }}">Powrót do podsumowania</a>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full caption-bottom text-sm">
      <thead>
        <tr class="border-b">
          <th class="text-left py-2 px-2">Nazwa</th>
          <th class="text-left py-2 px-2">Kwota</th>
          <th class="text-left py-2 px-2">Akcje</th>
        </tr>
      </thead>
      <tbody>
        {% for t in templates %}
          <tr class="border-b">
            <td class="py-2 px-2">{{ t.label ?? t['label'] }}</td>
            <td class="py-2 px-2">{{ (t.amount_pln ?? t['amount_pln']) ~ ' PLN' }}</td>
            <td class="py-2 px-2">
              <form method="post" action="{{ path('cc_payment_templates_delete', {index: loop.index0}) }}" onsubmit="return confirm('Usunąć ten szablon?');">
                <button class="btn-outline" type="submit">Usuń</button>
              </form>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="3" class="py-4 text-center text-muted-foreground">Brak szablonów</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</main>
{% endblock %}

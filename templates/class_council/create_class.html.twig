{% extends 'base.html.twig' %}

{% block body %}
<main class="flex-grow container mx-auto px-4 py-8">
  <h1 class="text-2xl font-display font-bold text-workshop-brown mb-6">Utwórz klasę</h1>
  <form method="post" class="space-y-4 max-w-md">
    <div>
      <label class="block text-sm font-medium mb-1">Nazwa klasy</label>
      <input name="name" type="text" class="w-full border rounded px-3 py-2" required>
    </div>
    <button class="btn-primary" type="submit">Zapisz</button>
  </form>
</main>
{% endblock %}
